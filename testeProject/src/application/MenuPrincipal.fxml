<StackPane id="pnlStackPaneMenuApp"
	xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<VBox fx:id="painelMenuApp">
			<children>
				<HBox id="hboxHeaderMenuApp">
					<children>
						<Label id="tituloMenuApp" text="Menu de ações">
							<HBox.margin>
								<Insets left="30.0" />
							</HBox.margin>
						</Label>
						<Button onAction="#close" fx:id="btnClose"
							styleClass="btn_close">
							<HBox.margin>
								<Insets left="100.0" />
							</HBox.margin>
						</Button>
					</children>
					<VBox.margin>
						<Insets bottom="10.0" top="15.0" />
					</VBox.margin>
				</HBox>
				<HBox fx:id="boxDivisorBotoes">
					<children>
						<VBox styleClass="box-botoes">
							<children>
								<Button onAction="#actLogin" styleClass="btn_primary"
									text="Login" />
								<Button onAction="#actCadItem" styleClass="btn_primary"
									text="Cadastro de item" />
								<Button onAction="#actRelatorio" styleClass="btn_primary"
									text="Relatórios" />
								<Button onAction="#actRegistroLucro"
									styleClass="btn_primary" text="Registro de lucros" />
							</children>
							<HBox.margin>
								<Insets left="30.0" />
							</HBox.margin>
						</VBox>
						<VBox styleClass="box-botoes">
							<children>
								<Button onAction="#actCadCliente"
									styleClass="btn_primary" text="Cadastro de cliente" />
								<Button onAction="#actCadFuncionario"
									styleClass="btn_primary" text="Cadastro de funcionário" />
								<Button onAction="#actManuseioInvetario"
									styleClass="btn_primary" text="Manuseio de inventário" />
								<Button onAction="#actAlterarInvetario"
									styleClass="btn_primary" text="Alterar inventário" />
							</children>
						</VBox>
					</children>
				</HBox>
				<HBox id="boxRodape">
					<VBox.margin>
						<Insets top="30.0" />
					</VBox.margin>
					<children>
						<Button id="botaoCancelar" onAction="#close"
							styleClass="btn" text="Fechar">
							<HBox.margin>
								<Insets left="220.0" />
							</HBox.margin>
						</Button>
					</children>
				</HBox>
			</children>
		</VBox>
	</children>
</StackPane>
